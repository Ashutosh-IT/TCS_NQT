1.) Find the smallest number in an array

#include <bits/stdc++.h>
using namespace std;
int smallest(vector<int> &arr, int n) {
    int small = arr[0];
    for (int i = 1; i < n; i++) {
        if (arr[i] < small) {
            small = arr[i];
        }
    }
    return small;
}

2.) Find the largest number in an array
#include <bits/stdc++.h>
using namespace std;
int largest(vector<int> &arr, int n) {
    int large = arr[0];
    for (int i = 1; i < n; i++) {
        if (arr[i] > large) {
            large = arr[i];
        }
    }
    return large;
}
 3.) Find second smallest and second largest
#include <vector>
#include <climits> // for INT_MAX

int secondLargest(const std::vector<int>& a, int n) {
    int largest = a[0];
    int slargest = -1;
    for (int i = 1; i < n; i++) {
        if (a[i] > largest) {
            slargest = largest;
            largest = a[i];
        } else if (a[i] < largest && a[i] > slargest) {
            slargest = a[i];
        }
    }
    return slargest;
}

int secondSmallest(const std::vector<int>& a, int n) {
    int smallest = a[0];
    int ssmallest = INT_MAX;
    for (int i = 1; i < n; i++) {
        if (a[i] < smallest) {
            ssmallest = smallest;
            smallest = a[i];
        } else if (a[i] > smallest && a[i] < ssmallest) {
            ssmallest = a[i];
        }
    }
    return ssmallest;
}
